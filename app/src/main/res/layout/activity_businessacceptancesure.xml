<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout style="@style/tablerow_sty" >

            <TextView
                android:id="@+id/tisi_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="为了更快的上传照片，请调低拍照时的像素"
                android:textColor="#ff0190eb" />
        </LinearLayout>

        <View style="@style/view_sty" />

        <LinearLayout
            style="@style/tablerow_sty"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/preview" />
        </LinearLayout>

        <View style="@style/view_sty" />

        <LinearLayout
            style="@style/tablerow_sty"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_getphoto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bt_photograph_selecter"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_preview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bt_preview_selecter" />
        </LinearLayout>

        <View style="@style/view_sty" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dip" />

        <include
            android:id="@+id/include_sureclane"
            layout="@layout/bottom_button" />
    </LinearLayout>

</LinearLayout>