                <TextView
                    android:id="@+id/text_pgdx"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理结果:" />

                <TextView
                    android:id="@+id/text_cljg"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理方式:" />

                <TextView
                    android:id="@+id/text_clfs"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务评价:" />

                <TextView
                    android:id="@+id/text_fwpj"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价内容:" />

                <TextView
                    android:id="@+id/text_kzzd2"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完结备注:" />

                <TextView
                    android:id="@+id/text_kzzd6"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <include
            android:id="@+id/include_botto"
            layout="@layout/bottom_button" />
    </LinearLayout>

</ScrollView>