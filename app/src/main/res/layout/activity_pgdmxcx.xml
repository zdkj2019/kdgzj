<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="基本信息"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/part"
            android:orientation="vertical" >

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派工单号:" />

                <TextView
                    android:id="@+id/text_mxh"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单据状态:" />

                <TextView
                    android:id="@+id/text_sr1"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否超时:" />

                <TextView
                    android:id="@+id/text_sr2"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="故障信息"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/part"
            android:orientation="vertical" >

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报 障 人 :" />

                <TextView
                    android:id="@+id/text_fy1"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话:" />

                <TextView
                    android:id="@+id/text_fy2"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报障时间:" />

                <TextView
                    android:id="@+id/text_fy5"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障现象:" />

                <TextView
                    android:id="@+id/text_jkje"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业务性质:" />

                <TextView
                    android:id="@+id/text_dqlj"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="工单信息"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/part"
            android:orientation="vertical" >

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建 单 人 :" />

                <TextView
                    android:id="@+id/text_czy"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建单时间:" />

                <TextView
                    android:id="@+id/text_czsj"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到达时间:" />

                <TextView
                    android:id="@+id/text_ddsj"
                    style="@style/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/tablerow_sty" >

                <TextView
