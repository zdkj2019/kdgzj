<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_bg"
        android:orientation="vertical" >

        <RelativeLayout style="@style/tablerow_sty" >

            <TextView
                android:id="@+id/TextV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/t_sfzh"
                android:textColor="#4d4f4e" />

            <EditText
                android:id="@+id/et_sfzh"
                style="@style/edittext_sty"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/TextV1"
                android:digits="0123456789xX"
                android:maxLength="18"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/dfdg"
                style="@style/text_image"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <View style="@style/view_sty" />

        <RelativeLayout style="@style/tablerow_sty" >

            <TextView
                android:id="@+id/Textcsrq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/t_csrq"
                android:textColor="#4d4f4e" />

            <TextView
                android:id="@+id/tv_csrq"
                style="@style/edittext_sty"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/Textcsrq"
                android:singleLine="true"
                android:textColor="#ff0190eb" />

            <ImageView
                android:id="@+id/dyuyuetime"
                style="@style/text_image"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <View style="@style/view_sty" />

        <RelativeLayout style="@style/tablerow_sty" >

            <TextView
                android:id="@+id/textzjyxq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/t_zjyxq1"
                android:textColor="#4d4f4e" />

            <TextView
                android:id="@+id/tv_zjyxq1"
                style="@style/edittext_sty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ff0190eb"
                android:layout_toRightOf="@+id/textzjyxq1" />

            <ImageView
                android:id="@+id/ewm"
                style="@style/text_image"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <View style="@style/view_sty" />

        <RelativeLayout style="@style/tablerow_sty" >

            <TextView
                android:id="@+id/textzjyxq2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/t_zjyxq2"
                android:textColor="#4d4f4e" />

            <TextView
                android:id="@+id/tv_zjyxq2"
                style="@style/edittext_sty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ff0190eb"
                android:layout_toRightOf="@+id/textzjyxq2" />

            <ImageView
                android:id="@+id/eewm"
                style="@style/text_image"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <View style="@style/view_sty" />

             <RelativeLayout style="@style/tablerow_sty" >

            <TextView
                android:id="@+id/textzjdz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/t_zjdz"
                android:textColor="#4d4f4e" />

            <EditText
                android:id="@+id/et_zjdz"
                style="@style/edittext_sty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textzjdz" />

            <ImageView
                android:id="@+id/eewmzjdz"
                style="@style/text_image"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <View style="@style/view_sty" />
              <RelativeLayout style="@style/tablerow_sty" >

            <TextView
                android:id="@+id/textzx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/t_zx"
                android:textColor="#4d4f4e" />

            <TextView
                android:id="@+id/tv_zx"
                style="@style/edittext_sty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="       点击进入照相"
                android:layout_toRightOf="@+id/textzx" />

            <ImageView
                android:id="@+id/eewmzx"
                style="@style/text_image"
                android:contentDescription="@string/todo" />
        </RelativeLayout>


        <View style="@style/view_sty" />
        <View
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/confirm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_nest_selecter" />

            <Button
                android:id="@+id/cancel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_toRightOf="@+id/confirm2"
                android:background="@drawable/bt_back_selecter" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="15.0dip"
                android:layout_below="@+id/confirm2" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>